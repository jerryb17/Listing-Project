<% layout('/layouts/boilerplate') -%>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN%>';
    const listing = <%- JSON.stringify(listing) %>;
</script>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%=listing.title%>
            </h3>
        </div>

        <div class="col-6 offset-3 card show-card listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="<%=listing.title%>">
            <div class="card-body">
                <p class="card-text"><b>
                        <%=listing.title%>
                    </b>
                </p>
                <p class="card-text"><i>Owner: <%= listing.owner.username %></i></p>
                <p class="card-text">
                    <%=listing.description%>
                </p>
                <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN")%></p>
                <p class="card-text">
                    <%=listing.location%>
                </p>
                <p class="card-text">
                    <%=listing.country%>
                </p>

            </div>
        </div>

        <% if(currentUser && currentUser._id.equals(listing.owner._id)){ %>
            <div class="btns mb-3">
                <a class="btn btn-dark col-1 offset-3 edit-btn" href="/listings/<%=listing._id%>/edit">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=Delete">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>
                
            </div>
            <% } %>

                
                    <div class="col-8 offset-3 mb-3">
                        

<%if(currentUser){ %> <hr>
                        <h3>Leave a review</h3>
                        <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate
                            class="needs-validation">

                            <!-- <div class="mb-3 mt-3">
                                <label for="rating" class="form-lable">Rating</label>
                                <input type="range" min="1" max="5" step="0.5" id="rating" name="review[rating]"
                                    class="form-range">
                            </div> -->
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-lable">Rating</label>
                            <fieldset class="starability-heartbeat">
                                
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset></div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-lable">Comments</label>
                                <textarea name="review[comment]]" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please add valid review</div>
                                <div>

                                </div>
                            </div>
                            <div>
                                <button class="btn btn-outline-dark">Submit</button>
                            </div>
                        </form>
                        <% }%>

                        
                        <% if(listing.reviews.length!=0) {%>
                            <hr>
                        
                            <h4>All Reviews</h4>
                            <div class="row">
                                <% for(let review of listing.reviews){ %>
                                    <div class="card col-6 mb-3 ms-3" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                @<%= review.author.username%>
                                            </h5>
                                            <p class="card-text">
                                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                            </p>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>
                        
                        
                                        </div>
                                        <%if(currentUser){ %>
                                            <div>
                                                <form method="post"
                                                    action="/listings/<%=listing._id %>/reviews/<%=review._id %>?_method=DELETE">
                                                    <button class="btn mt-2 mb-2 btn-sm btn-dark">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% }%>
                        
                        
                            </div>
                            <hr>
                            <% } %>
<div class="col-8 mt-3 mb-3">
    <h3>Where you'll Be</h3>
    <div id="map"></div>
</div>
                </div>
                
    </div>
   <script src="/js/map.js"></script>