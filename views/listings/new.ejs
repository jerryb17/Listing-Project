<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
      
    <h2>Add New Product</h2>
    <form method="post" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate >
        
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input type="text"
            placeholder="Add a Catchy Title"
             name="listing[title]"
               class="form-control" required>
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Please Enter a Title</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
                <textarea type="text" name="listing[description]" class="form-control" required></textarea> 
                <div class="valid-feedback">Description Looks good!</div>
                <div class="invalid-feedback">Enter a short description</div>
        </div>
      
    <div class="mb-3">
        <lable for="image" class="form-lable">Upload Image</lable>
        <input type="file" name="listing[image]" class="form-control" required>

    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
        <lable for="price" class="form-lable">Price</lable>
        <input placeholder="500" name="listing[price]" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Number</div>
    </div>
    
    <div class="mb-3 col-md-8">
        <lable for="location" class="form-lable">Location</lable>
        <input placeholder="Mumbai, Maharashtra" type="text" name="listing[location]" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Location</div>
    </div>
    </div>
    <div class="mb-3">
        <lable for="country" class="form-lable">Country</lable>
        <input placeholder="India" type="text" name="listing[country]" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Country</div>
    </div>
       
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
   
    </div>
    </div>