<% layout('/layouts/boilerplate') -%>
<div class="row mt-3"><div class="col-8 offset-2">
    <h3>Edit : <%=listing.title%></h3>
    
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <lable for="lable" class="form-lable">Title</lable>
            <input  name="listing[title]" value="<%=listing.title%>" class="form-control" required>
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please Enter a Title</div></div>


            <div class="mb-3">
                <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]"  class="form-control" required><%=listing.description%></textarea>
        <div class="valid-feedback">Description Looks good!</div>
        <div class="invalid-feedback">Enter a short description</div></div>

        <div class="mb-3">
            <img src="<%=originalImageURL %>">
        </div>
            <div class="mb-3">
                <lable for="image" class="form-lable">Upload Image</lable>
                <input name="listing[image]" type="file" class="form-control"> 
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-lable">Price</lable>
            <input name="listing[price]" value="<%=listing.price%>" class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Price</div></div>

            <div class="mb-3 col-md-8">
                <lable for="location" class="form-lable">Location</lable>
            <input name="listing[location]" value="<%=listing.location%>" class="form-control" required>
            <div class="invalid-feedback">Please Enter Location</div></div></div>

            <div class="mb-3">
                <lable for="country" class="form-lable">Country</lable>            
            <input  name="listing[country]" value="<%=listing.country%>"  class="form-control" required>
        <div class="invalid-feedback">Please Enter Valid Country</div></div>
            <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form></div>
    </div>